#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  .carousel-inner
    - @resources.try(:each_with_index) do |resource, i|
      .item{class: i == 0 ? 'active': nil}
        %img{:alt => "First slide", "data-src" => "holder.js/900x500/auto/#777:#7a7a7a/text:First slide", :src => "#{resource.avatar.url}"}
        .container
          .carousel-caption
            %h1
              = utf8_html resource.title
            %p
              = simple_format utf8(resource.introduction)
            %p
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    %span.glyphicon.glyphicon-chevron-right
